<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layoutTop"
        android:layout_width="match_parent"
        android:layout_height="50dp"></RelativeLayout>

    <LinearLayout
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutTop"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5dp"
            android:layout_marginLeft="@dimen/_5dp"
            android:layout_marginRight="@dimen/_5dp"
            android:background="@color/White">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:orientation="vertical">

                <com.taxibookingdriver.Font.Tahoma
                    android:id="@+id/msglaert"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_30dp"
                    android:gravity="center"
                    android:padding="@dimen/_10dp"
                    android:text=""
                    android:textColor="@color/dark_text"
                    android:textSize="@dimen/_15sp" />


                <com.taxibookingdriver.Font.Tahoma
                    android:id="@+id/con_ok"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/button_background"
                    android:gravity="center|center_horizontal"
                    android:padding="@dimen/_10dp"
                    android:layout_marginLeft="@dimen/_50dp"
                    android:layout_marginRight="@dimen/_50dp"
                    android:text="@string/OK"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_15sp"
                    android:textStyle="bold" />


            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rel_1"
        android:layout_width="@dimen/_60dp"
        android:layout_height="@dimen/_60dp"
        android:layout_above="@+id/layoutBottom"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-30dp"
        android:background="@drawable/popup_bg_shadow">

        <ImageView
            android:layout_width="@dimen/_40dp"
            android:layout_height="@dimen/_35dp"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/_13dp"
            android:adjustViewBounds="true"
            android:background="@drawable/taxi_popup" />

    </RelativeLayout>


</RelativeLayout>

