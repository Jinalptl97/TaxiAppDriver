<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rr_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10dp"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_marginRight="@dimen/_10dp"
            card_view:cardCornerRadius="@dimen/_5dp"
            card_view:cardElevation="@dimen/_10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_10dp">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_fname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/et_fname"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="@color/Black"
                            android:hint="@string/First_Name"
                            android:inputType="text"
                            android:maxLength="20"
                            android:paddingTop="@dimen/_3dp"
                            android:textColor="@color/dark_text"
                            android:textColorHint="@color/dark_text"
                            android:textSize="@dimen/_13sp" />

                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_5dp">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_lname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/et_lname"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="@color/Black"
                            android:hint="@string/Last_Name"
                            android:inputType="text"
                            android:maxLength="20"
                            android:paddingTop="@dimen/_3dp"
                            android:textColor="@color/dark_text"
                            android:textColorHint="@color/dark_text"
                            android:textSize="@dimen/_13sp" />

                    </android.support.design.widget.TextInputLayout>


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_20dp"
                    android:layout_marginRight="@dimen/_10dp">

                    <com.taxibookingdriver.Font.Tahoma
                        android:id="@+id/txt_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:inputType="number"
                        android:text=""
                        android:textColor="@color/dark_text"
                        android:textSize="@dimen/_13sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1dp"
                    android:layout_marginLeft="@dimen/_13dp"
                    android:layout_marginRight="@dimen/_13dp"
                    android:background="@color/Black" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_16dp">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/et_email"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="@color/Black"
                            android:hint="@string/Email_Id_optional"
                            android:inputType="textEmailAddress"
                            android:maxLength="80"
                            android:paddingTop="@dimen/_3dp"
                            android:textColor="@color/dark_text"
                            android:textColorHint="@color/dark_text"
                            android:textSize="@dimen/_13sp" />

                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_5dp">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_pwd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/et_pwd"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="@color/Black"
                            android:hint="@string/only_password"
                            android:inputType="textPassword"
                            android:maxLength="8"
                            android:paddingTop="@dimen/_3dp"
                            android:textColor="@color/dark_text"
                            android:textColorHint="@color/dark_text"
                            android:textSize="@dimen/_13sp" />

                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/hint"
                    android:layout_width="match_parent"
                    android:layout_marginRight="@dimen/_5dp"
                    android:layout_height="wrap_content">


                    <com.taxibookingdriver.Font.Tahoma
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_10dp"
                        android:gravity="right"
                        android:text="@string/Enter_6_8_character"
                        android:textColor="@color/dark_text"
                        android:textSize="@dimen/_13sp"
                        android:textStyle="bold" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_10dp">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <EditText
                            android:id="@+id/et_id"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="@color/Black"
                            android:hint="@string/Driving_License_No"
                            android:inputType="text"
                            android:paddingTop="@dimen/_3dp"
                            android:textColor="@color/dark_text"
                            android:textColorHint="@color/dark_text"
                            android:textSize="@dimen/_13sp" />

                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <com.taxibookingdriver.Font.Tahoma
                            android:id="@+id/front_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:paddingRight="@dimen/_30dp"
                            android:text="@string/Front"
                            android:textColor="@color/profile_update"
                            android:textSize="@dimen/_13sp" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/front_text">


                            <RelativeLayout
                                android:id="@+id/rr_front"
                                android:layout_width="@dimen/_110dp"
                                android:layout_height="@dimen/_90dp"
                                android:layout_marginLeft="@dimen/_10dp"
                                android:layout_marginTop="@dimen/_3dp"
                                android:background="@drawable/profile_border">


                                <ImageView
                                    android:id="@+id/img_front"
                                    android:layout_width="@dimen/_110dp"
                                    android:layout_height="@dimen/_90dp"
                                    android:layout_margin="@dimen/_7dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/front_img" />

                            </RelativeLayout>

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <com.taxibookingdriver.Font.Tahoma
                            android:id="@+id/back_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:paddingRight="@dimen/_30dp"
                            android:text="@string/Back"
                            android:textColor="@color/profile_update"
                            android:textSize="@dimen/_13sp" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/back_text"
                            android:layout_marginRight="@dimen/_10dp">


                            <RelativeLayout
                                android:id="@+id/rr_back"
                                android:layout_width="@dimen/_110dp"
                                android:layout_height="@dimen/_90dp"
                                android:layout_marginLeft="@dimen/_10dp"
                                android:layout_marginTop="@dimen/_3dp"
                                android:background="@drawable/profile_border">

                                <ImageView
                                    android:id="@+id/img_back"
                                    android:layout_width="@dimen/_110dp"
                                    android:layout_height="@dimen/_90dp"
                                    android:layout_margin="@dimen/_7dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/back_img" />

                            </RelativeLayout>

                        </LinearLayout>

                    </RelativeLayout>


                </LinearLayout>

                <RelativeLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_20dp">


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_nric"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/et_nric"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="@color/Black"
                            android:hint="@string/NRIC_FIN"
                            android:inputType="text"
                            android:paddingTop="@dimen/_3dp"
                            android:textColor="@color/dark_text"
                            android:textColorHint="@color/dark_text"
                            android:textSize="@dimen/_13sp" />

                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rr_personal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_7dp"
                    android:background="@drawable/button_background"
                    android:clickable="true"
                    android:elevation="@dimen/_10dp"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:visibility="visible">


                    <com.taxibookingdriver.Font.Tahoma
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_margin="@dimen/_5dp"
                        android:paddingBottom="@dimen/_5dp"
                        android:paddingLeft="@dimen/_20dp"
                        android:paddingRight="@dimen/_20dp"
                        android:paddingTop="@dimen/_5dp"
                        android:text="@string/Submit"
                        android:textColor="@color/White"
                        android:textSize="@dimen/_13sp" />
                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>


</ScrollView>