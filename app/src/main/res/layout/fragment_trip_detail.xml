<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10dp"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_marginRight="@dimen/_10dp"
            android:layout_marginTop="@dimen/_10dp"
            android:background="@color/White"
            app:cardBackgroundColor="@color/White"
            app:cardCornerRadius="@dimen/_3dp"
            app:cardElevation="@dimen/_7dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_5dp"
                android:paddingRight="@dimen/_7dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp">


                    <com.taxibookingdriver.Font.Tahoma
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3dp"
                        android:layout_toRightOf="@+id/img_date"
                        android:text="@string/Date"
                        android:textColor="@color/dark_text"
                        android:textSize="@dimen/_13sp" />


                    <com.taxibookingdriver.Font.Tahoma
                        android:id="@+id/txt_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/dark_text"
                        android:textSize="@dimen/_13sp" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/_7dp"
                    android:background="@drawable/dotted_black"
                    android:layerType="software" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp">


                    <com.taxibookingdriver.Font.Tahoma
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3dp"
                        android:layout_toRightOf="@+id/img_date"
                        android:text="@string/Time"
                        android:textColor="@color/dark_text"
                        android:textSize="@dimen/_13sp" />


                    <com.taxibookingdriver.Font.Tahoma
                        android:id="@+id/txt_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/dark_text"
                        android:textSize="@dimen/_13sp" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/_7dp"
                    android:background="@drawable/dotted_black"
                    android:layerType="software" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:orientation="horizontal">


                    <com.taxibookingdriver.Font.Tahoma
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3dp"
                        android:layout_toRightOf="@+id/img_date"
                        android:text="@string/from"
                        android:textColor="@color/dark_text"
                        android:textSize="@dimen/_13sp" />


                    <com.taxibookingdriver.Font.Tahoma
                        android:id="@+id/txt_from"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:gravity="right"
                        android:singleLine="true"
                        android:textColor="@color/dark_text"
                        android:textSize="@dimen/_13sp" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/_7dp"
                    android:background="@drawable/dotted_black"
                    android:layerType="software" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp">


                    <com.taxibookingdriver.Font.Tahoma
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3dp"
                        android:layout_toRightOf="@+id/img_date"
                        android:text="@string/To"
                        android:textColor="@color/dark_text"
                        android:textSize="@dimen/_13sp" />


                    <com.taxibookingdriver.Font.Tahoma
                        android:id="@+id/txt_to"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:gravity="right"
                        android:singleLine="true"
                        android:textColor="@color/dark_text"
                        android:textSize="@dimen/_13sp" />


                </LinearLayout>

                <fragment
                    android:id="@+id/mapp"
                    class="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200dp"
                    android:layout_marginTop="@dimen/_15dp" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp">


                    <com.taxibookingdriver.Font.Tahoma
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3dp"
                        android:layout_toRightOf="@+id/img_date"
                        android:text="@string/Fare"
                        android:textColor="@color/dark_text"
                        android:textSize="@dimen/_13sp" />


                    <com.taxibookingdriver.Font.Tahoma
                        android:id="@+id/txt_fare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/dark_text"
                        android:textSize="@dimen/_13sp" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/_7dp"
                    android:background="@drawable/dotted_black"
                    android:layerType="software" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp">


                    <com.taxibookingdriver.Font.Tahoma
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3dp"
                        android:layout_toRightOf="@+id/img_date"
                        android:text="@string/Coupon_Rate"
                        android:textColor="@color/dark_text"
                        android:textSize="@dimen/_13sp" />


                    <com.taxibookingdriver.Font.Tahoma
                        android:id="@+id/txt_coupan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/dark_text"
                        android:textSize="@dimen/_13sp" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/_7dp"
                    android:background="@drawable/dotted_black"
                    android:layerType="software" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp">


                    <com.taxibookingdriver.Font.Tahoma
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3dp"
                        android:layout_toRightOf="@+id/img_date"
                        android:text="@string/Cancel_Charges"
                        android:textColor="@color/dark_text"
                        android:textSize="@dimen/_13sp" />


                    <com.taxibookingdriver.Font.Tahoma
                        android:id="@+id/txt_cancel_charge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/dark_text"
                        android:textSize="@dimen/_13sp" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/_7dp"
                    android:background="@drawable/dotted_black"
                    android:layerType="software" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp">


                    <com.taxibookingdriver.Font.Tahoma
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3dp"
                        android:layout_toRightOf="@+id/img_date"
                        android:text="@string/trip_number"
                        android:textColor="@color/dark_text"
                        android:textSize="@dimen/_13sp" />


                    <com.taxibookingdriver.Font.Tahoma
                        android:id="@+id/txt_trip_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/dark_text"
                        android:textSize="@dimen/_13sp" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/_7dp"
                    android:background="@drawable/dotted_black"
                    android:layerType="software" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:visibility="gone">


                    <com.taxibookingdriver.Font.Tahoma
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3dp"
                        android:layout_toRightOf="@+id/img_date"
                        android:text="Waiting charge 10 Min * $1"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/_13sp" />


                    <com.taxibookingdriver.Font.Tahoma
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/_13sp" />


                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_20dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:orientation="horizontal">


                    <com.taxibookingdriver.Font.Tahoma
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/_5dp"
                        android:text="@string/Your_Earning"
                        android:textColor="@color/dark_text"
                        android:textSize="@dimen/_15sp" />


                    <com.taxibookingdriver.Font.Tahoma
                        android:id="@+id/txt_earning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="@dimen/_3dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textColor="@color/dark_text"
                        android:textSize="@dimen/_15sp" />

                </LinearLayout>


            </LinearLayout>


        </android.support.v7.widget.CardView>

    </ScrollView>


</RelativeLayout>