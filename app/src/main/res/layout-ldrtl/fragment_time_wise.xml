<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginBottom="@dimen/_10dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="@dimen/_3dp"
                    app:cardElevation="@dimen/_7dp">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rr_time_wise"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/White" />

                </android.support.v7.widget.CardView>


            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_marginRight="@dimen/_10dp"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginBottom="@dimen/_10dp"
                android:visibility="visible"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="@dimen/_3dp"
                app:cardElevation="@dimen/_7dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/White"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:layout_marginRight="@dimen/_5dp"
                        android:layout_marginTop="@dimen/_7dp">

                        <com.taxibookingdriver.Font.TahomaBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_3dp"
                            android:layout_toLeftOf="@+id/img_date"
                            android:text="@string/Total_Trip"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/_13sp" />


                        <com.taxibookingdriver.Font.TahomaBold
                            android:id="@+id/txt_total_trip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/_13sp" />


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_2dp"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:layout_marginRight="@dimen/_5dp"
                        android:layout_marginTop="@dimen/_7dp"
                        android:background="@drawable/dotted_black"
                        android:layerType="software" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:layout_marginRight="@dimen/_5dp"
                        android:layout_marginTop="@dimen/_7dp">

                        <com.taxibookingdriver.Font.Tahoma
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_3dp"
                            android:layout_toLeftOf="@+id/img_date"
                            android:text="@string/Payment"
                            android:textColor="@color/dark_text"
                            android:textSize="@dimen/_13sp" />


                        <com.taxibookingdriver.Font.Tahoma
                            android:id="@+id/txt_payment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:textColor="@color/dark_text"
                            android:textSize="@dimen/_13sp" />


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_2dp"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:layout_marginRight="@dimen/_5dp"
                        android:layout_marginTop="@dimen/_7dp"
                        android:background="@drawable/dotted_black"
                        android:layerType="software" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:layout_marginRight="@dimen/_5dp"
                        android:layout_marginTop="@dimen/_7dp">

                        <com.taxibookingdriver.Font.Tahoma
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_3dp"
                            android:layout_toLeftOf="@+id/img_date"
                            android:text="@string/Cash_Collection"
                            android:textColor="@color/dark_text"
                            android:textSize="@dimen/_13sp" />


                        <com.taxibookingdriver.Font.Tahoma
                            android:id="@+id/txt_cash"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:textColor="@color/dark_text"
                            android:textSize="@dimen/_13sp" />


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_2dp"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:layout_marginRight="@dimen/_5dp"
                        android:layout_marginTop="@dimen/_7dp"
                        android:background="@drawable/dotted_black"
                        android:layerType="software" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:layout_marginRight="@dimen/_5dp"
                        android:layout_marginTop="@dimen/_7dp">

                        <com.taxibookingdriver.Font.Tahoma
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_3dp"
                            android:layout_toLeftOf="@+id/img_date"
                            android:text="@string/Card_Payment"
                            android:textColor="@color/dark_text"
                            android:textSize="@dimen/_13sp" />


                        <com.taxibookingdriver.Font.Tahoma
                            android:id="@+id/txt_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:textColor="@color/dark_text"
                            android:textSize="@dimen/_13sp" />


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_2dp"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:layout_marginRight="@dimen/_5dp"
                        android:layout_marginTop="@dimen/_7dp"
                        android:background="@drawable/dotted_black"
                        android:layerType="software" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10dp"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:layout_marginRight="@dimen/_10dp"
                        android:layout_marginTop="@dimen/_15dp"
                        android:background="@drawable/amount_border">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:orientation="horizontal">


                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="2"
                                android:background="@color/final_color"
                                android:paddingBottom="@dimen/_15dp"
                                android:paddingLeft="@dimen/_10dp"
                                android:paddingRight="@dimen/_10dp"
                                android:paddingTop="@dimen/_15dp">

                                <com.taxibookingdriver.Font.Tahoma
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/Final_Amount"
                                    android:textColor="@color/dark_text"
                                    android:textSize="@dimen/_15sp" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/final_amt_color"
                                android:paddingBottom="@dimen/_15dp"
                                android:paddingLeft="@dimen/_10dp"
                                android:paddingRight="@dimen/_10dp"
                                android:paddingTop="@dimen/_15dp">

                                <com.taxibookingdriver.Font.Tahoma
                                    android:id="@+id/txt_final"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerInParent="true"
                                    android:textColor="@color/amt_color"
                                    android:textSize="@dimen/_15sp" />

                            </RelativeLayout>


                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>


    </ScrollView>

</RelativeLayout>