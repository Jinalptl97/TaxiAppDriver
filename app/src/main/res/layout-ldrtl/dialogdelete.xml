<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/_10dp"
    android:layout_marginLeft="@dimen/_10dp"
    android:layout_marginRight="@dimen/_10dp"
    android:layout_marginTop="@dimen/_10dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10dp"
        android:layout_marginLeft="@dimen/_10dp"
        android:layout_marginRight="@dimen/_10dp"
        android:layout_marginTop="@dimen/_10dp"
        app:cardCornerRadius="@dimen/_3dp"
        app:cardElevation="@dimen/_7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/White"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_15dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_25dp"
                    android:layout_height="@dimen/_25dp"
                    android:src="@drawable/popup_close" />

                <com.taxibookingdriver.Font.Tahoma
                    android:id="@+id/txt_ride"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10dp"
                    android:gravity="right"
                    android:text="@string/delete_ac"
                    android:textColor="@color/dark_text"
                    android:textSize="@dimen/_15sp" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/divider_color" />


            <com.taxibookingdriver.Font.Tahoma
                android:id="@+id/msglaert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20dp"
                android:layout_marginRight="@dimen/_20dp"
                android:layout_marginTop="@dimen/_10dp"
                android:padding="@dimen/_10dp"
               android:gravity="right"
                android:text="@string/Do_you_want_delete"
                android:textColor="@color/dark_text"
                android:textSize="@dimen/_15sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="@dimen/_10dp"
                android:gravity="left"
                android:orientation="horizontal"
                android:padding="@dimen/_10dp">


                <com.taxibookingdriver.Font.Tahoma
                    android:id="@+id/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10dp"
                    android:text="@string/Cancel"
                    android:textColor="@color/light_text"
                    android:textSize="@dimen/_15sp" />

                <com.taxibookingdriver.Font.Tahoma
                    android:id="@+id/con_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10dp"
                    android:text="@string/OK"
                    android:textColor="@color/dark_text"
                    android:textSize="@dimen/_15sp" />


            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>

