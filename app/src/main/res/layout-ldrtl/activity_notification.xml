<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/appdrawer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_56dp"
            android:background="@android:color/transparent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary">

                </android.support.v7.widget.Toolbar>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true">

                    <ImageView
                        android:id="@+id/img_back"
                        android:layout_width="@dimen/_56dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/_15dp"
                        android:paddingRight="@dimen/_15dp"
                        android:rotation="180"
                        android:src="@drawable/ic_arrow_back_black_24dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/headertext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_10dp"
                        android:layout_toLeftOf="@+id/img_back"
                        android:text="@string/Trip_Notification"
                        android:textColor="@color/White"
                        android:textSize="@dimen/_15sp" />


                    <ImageView
                        android:layout_width="@dimen/_100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="@dimen/_5dp"
                        android:scaleX="-1"
                        android:src="@drawable/top_logo" />


                </RelativeLayout>


            </RelativeLayout>

        </android.support.design.widget.AppBarLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_marginRight="@dimen/_10dp"
            android:layout_marginTop="@dimen/_10dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="@dimen/_3dp"
            app:cardElevation="@dimen/_7dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/White"
                    android:orientation="horizontal">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_profile"
                        android:layout_width="@dimen/_50dp"
                        android:layout_height="@dimen/_50dp"
                        android:layout_marginBottom="@dimen/_5dp"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:layout_marginRight="@dimen/_5dp"
                        android:layout_marginTop="@dimen/_5dp" />

                    <com.taxibookingdriver.Font.Tahoma
                        android:id="@+id/txt_cus_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/_10dp"
                        android:gravity="right"
                        android:textColor="@color/dark_text"
                        android:textSize="@dimen/_15sp" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/divider_color" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3dp"
                    android:background="@color/White"
                    android:orientation="horizontal"
                    android:padding="@dimen/_7dp">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_12dp"
                            android:layout_height="@dimen/_12dp"
                            android:layout_gravity="center"
                            android:src="@drawable/from_green" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_25dp"
                            android:layout_gravity="center"
                            android:src="@drawable/green_dotted" />

                        <ImageView
                            android:layout_width="@dimen/_12dp"
                            android:layout_height="@dimen/_12dp"
                            android:layout_gravity="center"
                            android:src="@drawable/to_yellow" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <com.taxibookingdriver.Font.Tahoma
                            android:id="@+id/txt_from"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2dp"
                            android:singleLine="true"
                            android:textColor="@color/dark_text"
                            android:textSize="@dimen/_13sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginRight="@dimen/_5dp"
                            android:layout_marginTop="@dimen/_10dp"
                            android:background="@color/divider_color" />

                        <com.taxibookingdriver.Font.Tahoma
                            android:id="@+id/txt_to"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_7dp"
                            android:singleLine="true"
                            android:textColor="@color/dark_text"
                            android:textSize="@dimen/_13sp" />

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:background="@color/White"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:id="@+id/rr_accept"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10dp"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:layout_marginRight="@dimen/_5dp"
                        android:layout_marginTop="@dimen/_5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_background"
                        android:clickable="true"
                        android:elevation="@dimen/_10dp"
                        android:foreground="?attr/selectableItemBackgroundBorderless">

                        <com.taxibookingdriver.Font.Tahoma
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:padding="@dimen/_12dp"
                            android:text="@string/Accept"
                            android:textColor="@color/White"
                            android:textSize="@dimen/_15sp" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rr_reject"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10dp"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:layout_marginRight="@dimen/_5dp"
                        android:layout_marginTop="@dimen/_5dp"
                        android:layout_weight="1"
                        android:background="@drawable/notification_reject"
                        android:clickable="true"
                        android:elevation="@dimen/_10dp"
                        android:foreground="?attr/selectableItemBackgroundBorderless">

                        <com.taxibookingdriver.Font.Tahoma
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:padding="@dimen/_12dp"
                            android:text="@string/Reject"
                            android:textColor="@color/dark_text"
                            android:textSize="@dimen/_15sp" />


                    </RelativeLayout>


                </LinearLayout>


            </LinearLayout>


        </android.support.v7.widget.CardView>

    </RelativeLayout>

</LinearLayout>